<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Learning System</title>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="MTA exam 98-361" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Study", "AllMaterials", "StudyMaterial", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Test", "Index", "Test", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Statistic", "Statistics", "Certification", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Add study material", "AddMaterial", "StudyMaterial", new { area = string.Empty }, null)</li>

                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-left">
                        <li>@Html.ActionLink("Learning System", "Index", "Home", new { area = string.Empty }, null)</li>
                    </ul>

                }

                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Discussion", "Discussion", "Certification", new { area = string.Empty }, null)</li>
                </ul>

                @if (User.Identity.IsAuthenticated && User.IsInRole(GlobalConstants.AdminRole))
                {
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" >
                                    Administration
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-header">Edit</li>
                                    <li>@Html.ActionLink("Materials", "Index", "Comments", new { area = "Administration" }, null)</li>
                                    <li>@Html.ActionLink("Comments", "Index", "Comments", new {area = "Administration"}, null)</li>
                                </ul>
                            </div>
                        </li>
                        
                    </ul>
                    
                }


                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Project Assignment for the ASP.NET MVC Course @@ SoftUni </p>
            <p><a href="https://github.com/gabbriela/LearningSystem" target="blank">Project Source Code</a> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
